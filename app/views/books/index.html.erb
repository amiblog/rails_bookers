<h1>Books</h1>

 <table>

   <thead>
     <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan = "3"></th>
     </tr>
   </thead>

    <tbody>

      <% @books.each do |book| %>

      <tr>
        <td><span><%= book.title%></span></td>

        <td><span><%= book.body%></span></td>

        <td><%= link_to "Show", "/books/#{book.id}"%></td>
        <td><%= link_to "Edit", "/books/#{book.id}/edit"%></td>
        <td><%= link_to "Destroy", "/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?"%></td>
      </tr>

      <%end%>
    </tbody>
 </table>

<h2>New book</h2>

  <% if @book.errors.any? %>
  <div class = "error_explanation">

    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <%end%>
    </ul>
  <%end%>

  </div>

<%= form_with model: @book, url: "/books",method: :post, local: true do |f|%>

  <div class = "field">
    <% if @book.errors.any?%>
    <div class = "field_with_errors">
      <label for = "book_title">Title</label>
    </div>

     <div class = "field_with_errors">
      <%= f.text_field :title%>
    </div>
    <%else%>
      <label for = "book_title">Title</label>
      <%= f.text_field :title%>
    <%end%>

  </div>

  <div class = "field">
    <% if @book.errors.any?%>
      <div class = "field_with_errors">
        <label for = "book_body">Body</label>
      </div>

      <div class = "field_with_errors">
        <%= f.text_area :body%>
      </div>
    <%else%>
      <label for = "book_body">Body</label>
      <%= f.text_area :body%>
    <%end%>
  </div>

  <div class = "actions">
    <%= f.submit "Create Book"%>
  </div>

<%end%>